{
  "name": "dat-fox",
  "version": "0.2.0",
  "description": "A Webextension for the dat:// protocol",
  "main": "background.js",
  "scripts": {
    "postinstall": "cp node_modules/bootstrap/dist/css/bootstrap.css addon/assets/ && mkdir -p addon/libdweb && cp -r node_modules/@sammacbeth/libdweb/src/protocol addon/libdweb",
    "build": "webpack",
    "watch": "webpack -w",
    "package": "webpack && web-ext build -s addon",
    "lint": "eslint background/ common/ dialog/ popup/ window/",
    "run": "cross-env MOZ_DISABLE_CONTENT_SANDBOX=1 web-ext run -s addon --firefox=firefoxdeveloperedition"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sammacbeth/dat-fox.git"
  },
  "author": "Sam Macbeth",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sammacbeth/dat-fox/issues"
  },
  "homepage": "https://github.com/sammacbeth/dat-fox#readme",
  "dependencies": {
    "@sammacbeth/libdweb": "0.0.2",
    "base64-js": "^1.3.0",
    "bootstrap": "4.1.2",
    "spanan": "2.1.0",
    "url-parse": "^1.4.3",
    "mime": "^2.3.1",
    "cross-env": "^5.2.0",
    "parse-dat-url": "^3.0.1"
  },
  "devDependencies": {
    "eslint": "^4.19.1",
    "web-ext": "^2.8.0",
    "webpack": "^2.3.2"
  }
}
